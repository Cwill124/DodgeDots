<Page
    x:Class="DodgeDots.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="400" Height="400" Background="Black">
        <TextBlock x:Name="winMessage" Canvas.ZIndex="1000" Canvas.Left="167" TextWrapping="Wrap" Text="You Win!"
                   Visibility="Collapsed" Canvas.Top="185" Foreground="Red" FontSize="16" FontStyle="Normal"
                   FontFamily="Lucida Sans" FontWeight="Bold" />
        <TextBlock x:Name="loseMessage" Canvas.ZIndex="999" Canvas.Left="150" TextWrapping="Wrap" Text="Game Over!"
                   Visibility="Collapsed" Canvas.Top="185" Foreground="Red" FontSize="16" FontStyle="Normal"
                   FontFamily="Lucida Sans" FontWeight="Bold" />
        <TextBlock x:Name="timer" Canvas.Left="375" Canvas.ZIndex="999999" TextWrapping="Wrap" Text="25"
                   Canvas.Top="10" />
    </Canvas>
</Page>